<!-- app/views/clientes/show.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Detalhes do Cliente</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      body {
        background-color: #f0f0f0; /* Cor de fundo pastel */
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 800px;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .card {
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      p {
        margin-bottom: 10px;
      }

      .btn {
        background-color: #ff9999; /* Cor pastel */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
      }

      .btn:hover {
        background-color: #ff6666; /* Cor mais escura para hover */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <p><strong>Nome:</strong> <%= @cliente.nome %></p>
        <p><strong>Endere√ßo:</strong> <%= @cliente.endereco %></p>
        <p><strong>CNPJ:</strong> <%= @cliente.cnpj %></p>
        <p><strong>Telefone:</strong> <%= @cliente.telefone %></p>
      </div>
      <div>
        <%= link_to "Editar este cliente", edit_cliente_path(@cliente), class: "btn" %> |
        <%= link_to "Voltar para a lista de clientes", clientes_path, class: "btn" %>
        <%= button_to "Excluir este cliente", @cliente, method: :delete, data: { confirm: "Tem certeza que deseja excluir este cliente?" }, class: "btn" %>
      </div>
    </div>
  </body>
</html>
